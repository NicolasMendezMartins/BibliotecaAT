@model library.Models.Livro

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar Livro</h1>

<h3>Tem certeza de que deseja excluir isso?</h3>
<div>
    <h4>Livro</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            Título
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            ID do Autor
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AutorId)
        </dd>
        <dt class="col-sm-2">
            ID do Gênero
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GeneroId)
        </dd>
        <dt class="col-sm-2">
            Sinopse
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sinopse)
        </dd>
        <dt class="col-sm-2">
            Livro Adicionado em
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Created)
        </dd>
        <dt class="col-sm-2">
            Código ISBN do Livro
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ISBN)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar para a Biblioteca</a>
    </form>
</div>

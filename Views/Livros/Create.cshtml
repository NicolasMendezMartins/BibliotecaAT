@model library.Models.Livro

@{
    ViewData["Title"] = "Create";
}

<h1>Adicionar livro</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label">Título do Livro</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AutorId" class="control-label">Autor do Livro (Se Não Aparecer, Cadastre Primeiro)</label>
                <select asp-for="AutorId" class="form-control" asp-items="ViewBag.AutorId"></select>
            </div>

            <div class="form-group">
                <label asp-for="GeneroId" class="control-label">Genero do Livro</label>
                <select asp-for="GeneroId" class="form-control" asp-items="ViewBag.GeneroId"></select>
            </div>

            <div class="form-group">
                <label asp-for="Sinopse" class="control-label">Sinopse do Livro</label>
                <input asp-for="Sinopse" class="form-control" />
                <span asp-validation-for="Sinopse" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DataDePublicacao" class="control-label">Data de Publicação do Livro</label>
                <input asp-for="DataDePublicacao" class="form-control" />
                <span asp-validation-for="DataDePublicacao" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ISBN" class="control-label">Código ISBN do Livro</label>
                <input asp-for="ISBN" class="form-control" />
                <span asp-validation-for="ISBN" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar a Biblioteca</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@model library.Models.Livro

@{
    ViewData["Title"] = "Details";
}

<h1>@Html.DisplayFor(model => model.Name)</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Título
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            ID do Autor
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AutorId)
        </dd>
        <dt class="col-sm-2">
            ID do Gênero
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GeneroId)
        </dd>
        <dt class="col-sm-2">
            Sinopse
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sinopse)
        </dd>
        <dt class="col-sm-2">
            Criado em
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Created)
        </dd>
        <dt class="col-sm-2">
            Código ISBN do Livro
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ISBN)
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar Informações</a> |
    <a asp-action="Index">Voltar para a Biblioteca</a>
</div>

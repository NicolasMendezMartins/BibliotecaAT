@model library.Models.Autor

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar Autor</h1>

<h3>Tem certeza de que deseja excluir esse Autor?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Primeiro Nome
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            Sobrenome
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <img src="~/images/@Model.ImageFile" style="width:200px; height:200px" />

        <dt class="col-sm-2">
            Criado em
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Created)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar para Autores</a>
    </form>
</div>

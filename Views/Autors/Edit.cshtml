@model library.Models.Autor

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Autor</h1>

<h4>Autor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label">Primeiro Nome</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label">Sobrenome</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="birth" class="control-label">Data de Nascimento</label>
                <input asp-for="birth" class="form-control" />
                <span asp-validation-for="birth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Upload" class="control-label">Upload de Imagem</label>
                <input asp-for="Upload" class="form-control" />
                <span asp-validation-for="Upload" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Created" value="@Model.Created" />
            <input type="hidden" asp-for="ImageFile" value="@Model.ImageFile" />
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para Autores</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
